<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/driver"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_realname_status"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="104dp"
        android:src="@mipmap/ic_autn_done" />

    <TextView
        android:id="@+id/tv_realname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="实名认证已提交"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_realname_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="只差一步缴纳保证金，开始接单~"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_realName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/now_pay"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_confirm_btn_black"
            android:text="立即缴纳"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/not_pay"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:text="暂不缴纳"
            android:textColor="@color/text_black" />
    </LinearLayout>
</LinearLayout>
