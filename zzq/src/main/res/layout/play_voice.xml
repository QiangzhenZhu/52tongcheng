<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.mylibrary.View.CircleImageView
        android:layout_width="120dp"
        android:layout_centerInParent="true"
        android:layout_height="120dp"
        android:id="@+id/record"
        app:civ_border_width="3dp"
        app:civ_border_color="#fff"
        android:src="@drawable/btn_chact_record_play" />

    <com.example.mylibrary.RecordAudioView.RecordTimeView
        android:visibility="invisible"
        android:layout_above="@+id/record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recordTimeTextView">

    </com.example.mylibrary.RecordAudioView.RecordTimeView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/horizontal_divider"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/cancle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:text="取消"
        android:textColor="@android:color/holo_blue_light"
        android:padding="10dp"
        android:layout_marginRight="0.5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="0.5dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:text="发送"
        android:textColor="@android:color/holo_blue_light"
        android:padding="10dp"
        android:gravity="center"/>
</LinearLayout>
</RelativeLayout>